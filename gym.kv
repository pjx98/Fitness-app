#: kivy 1.11.1
#:import WipeTransition kivy.uix.screenmanager.WipeTransition




<MainScreen>:
    transition: WipeTransition()
    id: ScreenManager
    FirstScreen:
    WorkoutScreen:
    SecondScreen:
    ThirdScreen:
    FourthScreen:
    FifthScreen:



           
<FirstScreen>:
    name: "FirstScreen"
    canvas.before:
        Color:
            rgba: .99, .99, .99, 1
        Rectangle:
            pos: self.pos
            size: self.size
 
    FloatLayout:

        
        Button:            
            id: myButton
            size_hint: (.25, .25)
            pos_hint: {'x': 0.6, 'y': 0.4}
            background_normal: ''
            text: 'Workout'
            text_size: self.size
            halign: 'center'
            valign: 'bottom'
            font_size: 15
            color: 0, 0, 0, 1
            on_press: app.root.current = 'WorkoutScreen'

            
            Image: 
                source: 'workout.jpg'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size_hint: (.1, .1)

        Button:            
            id: myButton
            size_hint: (.25, .25)
            pos_hint: {'x': 0.2, 'y': 0.4}
            background_normal: ''
            text: 'Rest Timer'
            text_size: self.size
            halign: 'center'
            valign: 'bottom'
            font_size: 15
            color: 0, 0, 0, 1
            on_press: app.root.current = 'FifthScreen'
            
            Image: 
                source: 'stopwatch.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size_hint: (.3, .3)

        Button:
            size_hint: (0.1, 1)
            pos_hint: {'x': 0, 'y': 0}
            background_normal: ''
            background_color: rgba("#415E6E")
        
        Button:
            size_hint: (0.1, 1)
            pos_hint: {'x': .9, 'y': 0}
            background_normal: ''
            background_color: rgba("#415E6E")
        

          
        

<WorkoutScreen>
    name: "WorkoutScreen"
    canvas.before:
        Color:
            rgba: .99, .99, .99, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        Button:
            background_normal: ''
            size_hint: (.3, .3)
            pos_hint: {'x': 0.35, 'y': 0.7,}
        
            on_press: app.root.current = 'SecondScreen'

            Image:
                source: 'circle.jpg'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size_hint: (.1, .1)
                size: self.parent.size

            
   
        Button:
            size_hint: (.3, .3)
            pos_hint: {'x': 0.35, 'y': 0.4}
            background_normal: ''
            on_press: app.root.current = 'ThirdScreen'

            Image:
                source: 'circle_2.jpg'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size_hint: (.1, .1)
                size: self.parent.size

        Button:
            size_hint: (0.1,0.1)
            pos_hint: {'x': 0.1, 'y': 0,  'bottom': 0}
            on_press: app.root.current = 'FirstScreen'
            background_normal: ''

            Image:
                source: 'back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size: self.parent.size
        Button:
            background_normal: ''
            size_hint: (.3, .3)
            pos_hint: {'x': 0.35, 'y': 0.1}
            background_normal: ''
            on_press: app.root.current = 'FourthScreen'
             
            Image:
                source: 'circle_3.jpg'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size_hint: (.1, .1)
                size: self.parent.size

        Button:
            size_hint: (0.1, 1)
            pos_hint: {'x': 0, 'y': 0}
            background_normal: ''
            background_color: rgba("#415E6E")
        
        Button:
            size_hint: (0.1, 1)
            pos_hint: {'x': .9, 'y': 0}
            background_normal: ''
            background_color: rgba("#415E6E")


