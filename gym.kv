<FifthScreen>:
    name: "FifthScreen"
    canvas.before:
        Color:
            rgba: .99, .99, .99, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            id: output
            text: "Time:"
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0.3, 'y': 0.3}
        TextInput:
            id: ti
            size_hint: (0.2, 0.1)
            pos_hint: {'x': 0.5, 'y': 0.3}
            multiline: False

        Button:
            size_hint: (0.1, 1)
            pos_hint: {'x': 0, 'y': 0}
            background_normal: ''
            background_color: rgba("#415E6E")

        Button:
            size_hint: (0.1, 1)
            pos_hint: {'x': .9, 'y': 0}
            background_normal: ''
            background_color: rgba("#415E6E")
        Button:
            size_hint: (.1, .1)
            pos_hint:{ 'x': 0.45, 'y': .55}
            id: btn_0
            text: "start timer"
            on_press: root.val0()
        Label:
            id: timer
            text: str(120)
            color: 0, 0, 0, 1

        Button:
            size_hint: (0.1,0.1)
            pos_hint: {'x': 0.1, 'y': 0,  'bottom': 0}
            on_press: app.root.current = 'FirstScreen'
            background_normal: ''

            Image:
                source: 'back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size: self.parent.size

    


